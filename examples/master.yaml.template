apiVersion: "cluster.k8s.io/v1alpha1"
kind: Machine
metadata:
  name: master
  labels:
    set: master
  namespace: $CLUSTER_NAME
spec:
  providerSpec:
    value:
      apiVersion: "lkeproviderconfig/v1alpha1"
      kind: "LkeMachineProviderConfig"
      roles:
      - Master
      region: "us-east"
      type: "g6-standard-2"
      image: "linode/ubuntu18.04"
  versions:
    kubelet: 1.11.3
    controlPlane: 1.11.3
